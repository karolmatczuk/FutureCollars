-- a.
SELECT CONCAT(first_name, ' ', last_name) AS Pracownik
FROM aggregates.batman;

-- b.
SELECT CONCAT(gift, ' – cena: ', price) AS cennik
FROM aggregates.batman;

-- c.
SELECT CONCAT(gift, ' – cena: ', price, ', dla: ', first_name, ' ', last_name) AS cennik
FROM aggregates.batman;

-- d.
SELECT UPPER(gift) AS prezent_wielkimi_literami
FROM aggregates.batman;

-- e.
SELECT LOWER(first_name) AS imie_malymi_literami
FROM aggregates.batman;

-- f.
SELECT last_name, CHAR_LENGTH(last_name) AS dlugosc
FROM aggregates.batman;

-- g.
SELECT LEFT(first_name, 2) AS pierwsze_dwie_litery_imienia
FROM aggregates.batman;

-- h.
SELECT CONCAT(LOWER(LEFT(first_name, 1)), LOWER(LEFT(last_name, 3))) AS login
FROM aggregates.batman;
